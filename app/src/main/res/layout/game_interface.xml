        app:layout_constraintWidth_percent="0.25"/>

    <ImageView
        android:id="@+id/cell_2_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/cell_size"
        android:padding="@dimen/cell_padding"
        android:background="@color/colorAccent"
