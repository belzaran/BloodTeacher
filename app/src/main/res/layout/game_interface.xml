    <ImageView
        android:id="@+id/cell_3_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/cell_size"
        android:padding="@dimen/cell_padding"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/cell_2_1"
        app:layout_constraintLeft_toRightOf="@id/cell_2_1"
        app:layout_constraintWidth_percent="0.25"/>

    <ImageView
        android:id="@+id/cell_0_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/cell_size"
        android:padding="@dimen/cell_padding"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/cell_0_1"
